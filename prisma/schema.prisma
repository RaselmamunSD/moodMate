generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String?
  avatar        String?
  profession    String?
  passwordHash  String?  // For email/password authentication
  emailVerified DateTime?
  preferredMood String?  // User's preferred emotional goal
  theme         String   @default("light")
  language      String   @default("en")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  emotions      EmotionEntry[]
  chatMessages  ChatMessage[]
  moodGoals     MoodGoal[]
  sessions      UserSession[]
}

model EmotionEntry {
  id          String   @id @default(cuid())
  userId      String
  emotion     String   // happy, sad, angry, anxious, etc.
  intensity   Int      // 1-10 scale
  source      String   // facial, voice, text, manual
  notes       String?
  createdAt   DateTime @default(now())
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  content   String
  role      String   // user, assistant
  emotion   String?  // Detected emotion in the message
  createdAt DateTime @default(now())
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MoodGoal {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  targetEmotion String // The emotion user wants to achieve
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Resource {
  id          String   @id @default(cuid())
  title       String
  description String?
  type        String   // music, book, meditation, exercise, video
  emotion     String   // Which emotion this resource helps with
  url         String?
  content     String?  // For text-based resources
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserSession {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  // Relations
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}